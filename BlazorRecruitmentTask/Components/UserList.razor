@using BlazorRecruitmentTask.Models
@using BlazorRecruitmentTask.Services
@using MudBlazor

<div class="component-container d-flex flex-column">
    <div class="overflow-auto top-panel scrollable-list d-flex flex-column">
        <div class="user-list-panel">
            <h3>Użytkownicy</h3>
            <MudDropZone T="UserModel" Identifier="@UserService.UnasssignedUsersGroup" AllowReorder=true Class="user-list mt-6">
            </MudDropZone>
        </div>
        <div class="flex-shrink-1">
            <MudDivider Class="mb-4" />
        </div>
    </div>
    <div class="overflow-auto bottom-panel scrollable-list pr-2">
        @foreach (var entry in History)
        {
            <div class="history-entry mb-2">
                <div class="d-flex flex-row align-items-center"><MudIcon Icon="@entry.Icon()" Size="Size.Small" Class="mr-2"></MudIcon> @entry.Message</div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public IEnumerable<HistoryEntryModel> History { get; set; } = Array.Empty<HistoryEntryModel>();
}